    <fragment
        android:id="@+id/nav_warehouse"
        android:name="com.cygest.easmobile.ui.warehouse.WarehouseFragment"
        android:label="@string/warehouse"
        tools:layout="@layout/fragment_warehouse" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.cygest.easmobile.ui.settings.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/nav_help"
        android:name="com.cygest.easmobile.ui.help.HelpFragment"
        android:label="@string/help"
        tools:layout="@layout/fragment_help" />

    <fragment
        android:id="@+id/nav_logout"
        android:name="com.cygest.easmobile.ui.login.LoginFragment"
        android:label="@string/logout"
        tools:layout="@layout/fragment_login" />

