<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.cygest.easmobile.ui.home.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_information"
        android:name="com.cygest.easmobile.ui.information.InformationFragment"
        android:label="@string/information"
        tools:layout="@layout/fragment_information" />

    <fragment
        android:id="@+id/nav_location"
        android:name="com.cygest.easmobile.ui.location.LocationFragment"
